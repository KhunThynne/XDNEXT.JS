# ----------------------------------------------------------------------
# üîë Database Configuration
# ----------------------------------------------------------------------

# Database engine type (e.g., postgres, mysql, sqlite)
DB_NAME=postgres
# Database Host/Server
SQL_HOST=localhost
# Database User
SQL_USER=your_db_user
# Database Password
SQL_PASSWORD=your_db_password
# Main Database Name
SQL_DATABASE_NAME=xdstudio

# Main Database Connection URL (used by Prisma)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://${SQL_USER}:${SQL_PASSWORD}@${SQL_HOST}:5432/${SQL_DATABASE_NAME}"
# Shadow Database URL (used for Prisma Migrate)
SHADOW_DATABASE_URL="postgres://${SQL_USER}:${SQL_PASSWORD}@${SQL_HOST}:5432/shadow-database"

# ----------------------------------------------------------------------
# üîí JSON Web Token (JWT) & Session Management
# ----------------------------------------------------------------------

# Secret Key for signing/verifying Access Tokens (must be generated and kept secret)
JWT_ACCESS_SECRET=your_long_access_secret_key
# Secret Key for signing/verifying Refresh Tokens (must be generated and kept secret)
JWT_REFRESH_SECRET=your_long_refresh_secret_key
# Access Token Expiration time (e.g., 15m, 1h)
ACCESS_TOKEN_EXPIRE=15m
# Refresh Token Expiration time (e.g., 7d, 30d)
REFRESH_TOKEN_EXPIRE=7d

# General Secret Key (used for various cryptography or generic JWT)
SECRET_KEY=your_secret_key_for_other_jwt_or_crypto

# Session Secret Key for session encryption
SESSION_SECRET=your_long_session_secret_key

# ----------------------------------------------------------------------
# üåê URL/Endpoint Configuration
# ----------------------------------------------------------------------

# Host for KeystoneJS
KEYSTONE_HOST=127.0.0.1
# Internal URL for the Site/Frontend (Local)
INTERNAL_SITE_URL=http://localhost:3000
# Internal URL for the API (Local)
INTERNAL_API_URL=http://localhost:3001
# Public URL for the Site/Frontend (used in Next.js)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Public URL for the API (used in Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Endpoint for the XD Core API
XD_CORE_API=http://localhost:1215

# ----------------------------------------------------------------------
# üí≥ Payment Gateway: Omise
# ----------------------------------------------------------------------

# Omise Public Key (Test/Live)
OMISE_PUBLIC_KEY=pkey_test_xxxxxxxxxxxxxxxx
# Omise Secret Key (Test/Live)
OMISE_SECRET_KEY=skey_test_xxxxxxxxxxxxxxxx

# üí≥ Payment Gateway: Stripe
# ----------------------------------------------------------------------

# Stripe Webhook Secret (for verifying incoming webhooks)
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Stripe Publishable Key (used in the Frontend)
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Stripe Secret Key (used in the Backend)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------------------
# ü§ñ External Service: Discord OAuth/Bot
# ----------------------------------------------------------------------

# Discord Application Client ID
AUTH_DISCORD_CLIENT_ID=your_discord_client_id
# Discord Application Client Secret (keep this secret)
AUTH_DISCORD_CLIENT_SECRET=your_discord_client_secret
# Discord Application Public Key
DISCORD_PUBLIC_KEY=your_discord_public_key
# Discord Bot Token (keep this secret)
DISCORD_BOT_TOKEN=your_discord_bot_token

# ----------------------------------------------------------------------
# ‚öôÔ∏è Other Configuration
# ----------------------------------------------------------------------

# Token for Code Generation tasks (should be rotated and kept secret)
CODEGEN_TOKEN=your_codegen_secret_token

# Prisma CLI Target (for deployment, e.g., linux-musl, windows)
PRISMA_CLI_BINARY_TARGETS=linux-musl

# üíæ Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379